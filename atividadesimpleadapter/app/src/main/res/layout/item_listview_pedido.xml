<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtIdProduto"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:text="@string/label_id_produto"/>

                        <TextView
                            android:id="@+id/txtNomeProduto"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:text="@string/label_nome_produto"/>

                        <TextView
                            android:id="@+id/txtValorProduto"
                            android:layout_width="60dp"
                            android:layout_height="20dp"
                            android:text="@string/label_valor_produto"/>

                        <TextView
                            android:id="@+id/txtQuantidadeProduto"
                            android:layout_width="85dp"
                            android:layout_height="20dp"
                            android:text="@string/label_quantidade_produto"/>

                </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/idProduto"
                    android:layout_width="30dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/nomeProduto"
                    android:layout_width="70dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/valorProduto"
                    android:layout_width="60dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/quantidadeProduto"
                    android:layout_width="85dp"
                    android:layout_height="20dp" />
        </LinearLayout>



        </LinearLayout>

</RelativeLayout>